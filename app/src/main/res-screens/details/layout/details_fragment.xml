<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.common.view.MediaView
        android:id="@+id/movie_details_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/small_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_details_title"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_image"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_title_value_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/movie_details_title_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Harry potter 7" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_punctuation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_details_punctuation"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_image"
        app:layout_constraintTop_toBottomOf="@id/movie_details_title_value_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_punctuation_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_punctuation_text"
        app:layout_constraintTop_toBottomOf="@id/movie_details_title_value_text"
        tools:text="8.2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_release_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_details_release_date"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_punctuation_value_text"
        app:layout_constraintTop_toBottomOf="@id/movie_details_title_value_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_release_date_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_release_date_text"
        app:layout_constraintTop_toBottomOf="@id/movie_details_title_value_text"
        tools:text="25/02/2022" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_language_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_details_language"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_image"
        app:layout_constraintTop_toBottomOf="@id/movie_details_release_date_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_language_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_language_text"
        app:layout_constraintTop_toBottomOf="@id/movie_details_punctuation_text"
        tools:text="EN" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_genres_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_details_genres"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_image"
        app:layout_constraintTop_toBottomOf="@id/movie_details_language_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_genres_value_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/movie_details_genres_text"
        app:layout_constraintTop_toBottomOf="@id/movie_details_language_text"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Fantasia, Aventuras" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_webpage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_details_webpage"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_image"
        app:layout_constraintTop_toBottomOf="@id/movie_details_genres_value_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_webpage_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textColorLink="@color/purple_700"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toEndOf="@id/movie_details_webpage_text"
        app:layout_constraintTop_toBottomOf="@id/movie_details_genres_value_text"
        tools:text="www.google.com"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_overview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_details_overview"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_details_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/movie_details_overview_value_text"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_space"
        android:maxLines="8"
        app:layout_constraintStart_toEndOf="@id/movie_details_overview_text"
        app:layout_constraintTop_toBottomOf="@id/movie_details_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Some incredible overview Some incredible overview Some incredible overview Some incredible overview Some incredible overview Some incredible overview Some incredible overview "/>


</androidx.constraintlayout.widget.ConstraintLayout>