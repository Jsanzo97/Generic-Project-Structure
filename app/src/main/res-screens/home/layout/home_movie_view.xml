<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.CardView.Default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/small_space">

        <com.example.common.view.MediaView
            android:id="@+id/movie_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_title_value_text"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@id/movie_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pelicula numero 1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_release_date_text"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toEndOf="@id/movie_image"
            app:layout_constraintEnd_toStartOf="@id/movie_popularity_text"
            app:layout_constraintTop_toBottomOf="@id/movie_title_value_text"
            tools:text="Pelicula numero 1"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_popularity_text"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toEndOf="@id/movie_release_date_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_title_value_text"
            tools:text="Pelicula numero 1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>