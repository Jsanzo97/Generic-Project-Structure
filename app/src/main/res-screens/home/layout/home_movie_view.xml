<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.CardView.Default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/small_space">

        <com.example.common.view.MediaView
            android:id="@+id/movie_image"
            android:layout_width="100dp"
            android:layout_height="@dimen/zero"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/movie_title_text"
            app:layout_constraintBottom_toBottomOf="@id/movie_language_text"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            android:textStyle="bold"
            android:text="@string/movie_title"
            app:layout_constraintStart_toEndOf="@id/movie_image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_title_value_text"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toEndOf="@id/movie_title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Harry potter 7"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_vote_average_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            android:textStyle="bold"
            android:text="@string/movie_score"
            app:layout_constraintStart_toEndOf="@id/movie_image"
            app:layout_constraintTop_toBottomOf="@id/movie_title_value_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_vote_average_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toEndOf="@id/movie_vote_average_text"
            app:layout_constraintTop_toBottomOf="@id/movie_title_value_text"
            tools:text="8.2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_release_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            android:text="@string/movie_date"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/movie_image"
            app:layout_constraintTop_toBottomOf="@id/movie_vote_average_text"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_release_date_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toEndOf="@id/movie_release_date_text"
            app:layout_constraintTop_toBottomOf="@id/movie_vote_average_value_text"
            tools:text="25/02/2022"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            android:textStyle="bold"
            android:text="@string/movie_language"
            app:layout_constraintStart_toEndOf="@id/movie_image"
            app:layout_constraintTop_toBottomOf="@id/movie_release_date_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_language_value_text"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_space"
            app:layout_constraintStart_toEndOf="@id/movie_language_text"
            app:layout_constraintTop_toBottomOf="@id/movie_release_date_value_text"
            tools:text="Es"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>